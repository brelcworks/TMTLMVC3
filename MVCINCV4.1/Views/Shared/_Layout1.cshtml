<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B & R ELECTRICAL WORKS</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.2.0.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.number.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("B. & R.", "AfterLogin", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Stock", "List", "Stock")</li>
                    <li>@Html.ActionLink("Population", "List", "Pop")</li>
                </ul>
                
                    <div class="navbar-form navbar-right">
                        <ul class="nav navbar-nav">
                            @{
                                if (Request.IsAuthenticated)
                                {
                                    using (Html.BeginForm("Logout", "MyAccount", FormMethod.Post, new { id = "LogoutForm" }))
                                    {
                                        <li><a href="javascript:document.getElementById('LogoutForm').submit()">Sign-Out</a></li>
                                    }
                                }
                                else
                                {
                                    <li><a>@Html.ActionLink("Signin", "login", "MyAccount")</a></li>
                                }
                            }
                        </ul>
                    </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <br />
        
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>
